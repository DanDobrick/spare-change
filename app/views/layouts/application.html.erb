<!DOCTYPE html>
<html>
<head>
  <title>SpareChange</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<script src="https://cdn.plaid.com/link/stable/link-initialize.js"></script>


<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class='nav-link'><a href='/'>Home</a></li>
        <% if logged_in? %>
          <li class='nav-link'><a href="/users/<%=current_user.id%>"><%= current_user.first_name %></a></li>
          <li class='nav-link'><a href='/sessions/<%= current_user.id %>', data-method='DELETE'>Logout</a></li>
        <% else %>
          <li class='nav-link'><a href="/users/new">Register</a></li>
          <li class='nav-link'><a href="/sessions/new">Login</a></li>
        <% end %>
      </ul>
    </nav>
    <div class="navigation-tools">
      <div class="search-bar">
          <%= render '/charities/search'%>
      </div>
    </div>
  </div>
</header>



<nav>
  <ul id='nav-ul'>
      <% if logged_in? %>
        
      <% else %>
        <li class='nav-list'><%= link_to "register", new_user_path, :method => :get %></li>
        <li class='nav-list'><%= link_to "login", new_session_path, :method => :get %></li>
      <% end %>
  </ul>
</nav>
<%= yield %>

</body>
</html>

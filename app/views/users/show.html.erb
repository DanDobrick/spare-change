<h1 id='welcome'>Welcome <%= current_user.first_name.titleize %>!</h1>

<div class='edit-user'><%= link_to "Edit info", edit_user_path, :method => :get %> </div><br><br>

<div class="cards">
  <div class="card">
  <div class="linkButton">
    <div class="card-image">
      <%= image_tag('real-coins.jpeg') %>
    </div>
    <div class="card-header">
    <% if !current_user.plaid_id %>
      <h3 class='card-text'>Click to Connect Your Bank Account</h3>
    <% else %>
      <p class='card-text'><%= current_user.first_name.titleize %> has already connected an account.</p>
      <% end %>
    </div>
    <p class='card-text'>Thank you for all that you do.</p>
  </div>
  </div>

  <div class="card">
    <div class="card-image">
      <section id='user-bucket'>
        <%=image_tag('jar-of-coins.jpeg', size: '200', class: 'user-bucket-img') %>
        <p id='bucket-text'>$<%= current_user.bucket %></p>
      </section>

      <h1><%= current_user.bucket %></h1>
    </div>
    <div class="card-header">
      <h3 class='card-text'>Round up total for <%= Date::MONTHNAMES[Date.today.month] %></h3>
    </div>
    <div class="card-copy card-text" id='round-up'>
        <% if current_user.transactions %>
          <p>Thanks, <%= current_user.first_name.titleize %>! You will be donating: $<span id="donation-amount" ><%= '%.2f' % @user.bucket %></span> to <%= current_user.current_charity_name || 'somewhere great...' %></p>
        <% end %>
        <% if current_user.plaid_id != nil %>
          <%= form_tag(users_charity_pause_path, method: "put", id: 'pause-form') do %>
            <%= submit_tag("Pause Donations", class: "style-btn") %>
          <% end %>
        <% else %>
          <button class='style-btn'>Connect Bank Account</button>
        <% end %>
    </div>
  </div>

  <div class="card">
    <div class="card-image">
      <%= image_tag('giving-hand.jpeg', size: '200') %>
    </div>
    <div class="card-header">
      <h3 class='card-text'><%= current_user.first_name.titleize %>'s Charity Choice</h3>
    </div>
    <div class="card-copy card-text">
        <% if current_user.current_charity_name %>
          <%= link_to current_user.current_charity_name, charity_path(current_user.current_charity_ein), :method => :get %>
        <% else %>
          <p><%= current_user.first_name.titleize %> does not have a charity selected.</p>
          <%= link_to "Find a Charity", charities_path, :method => :get %>
        <% end %>
    </div>
  </div>
</div>

<div class="donation-history-button">
  <a href="/users/<%= current_user.id %>/history">
    <button class='style-btn'>
      Donation History
    </button>
  </a>
</div> <br><br>

